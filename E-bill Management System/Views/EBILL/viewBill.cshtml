@model E_bill_Management_System.Models.BillDetails

@{
    ViewBag.Title = "viewBill";
}

<div class="container shadow rounded mt-4">
    <div class="row">
        <div class="col-6">
            <h4 class="text-primary ">Programming with Vijay</h4>
            <pre>
Uttar Pradesh,Khalilabad,India, 272175
Phone   : 6393274149
website : www.programmingwithebill.com
</pre>
        </div>
        <div class="offset-3 col-3 ">
            <h4 class="text-primary ">E-Bill</h4>
            <pre>
Invoice No : @Model.Id
 
</pre>
        </div>
    </div>
    <div class="row  mt-3">
        <div class="col-3 ">
            <h4 class="bg-primary text-white ">Bill</h4>
            <pre>
    @Model.CustomerName
@Model.MobileNumber
@Model.Address
</pre>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-bordered table-striped table-responsive ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-2 ">
        <div class="col-12">
            <h4 class="float-end">Total Amount :@Model.TotalAmount</h4>
        </div>
    </div>
</div>
