@model IEnumerable<E_bill_Management_System.Models.BillDetails>
@{
    ViewBag.Title = "Index";
}

<div class="container shadow rounded mt-4">
    <div class="col-12">
        <h4 class="text-center ">All Bills</h4>

        <table class="table table-responsive table-striped table-hover table-bordered text-center ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Customer Name</th>
                    <th>Mobile Number</th>
                    <th>Address</th>
                    <th>Total Amount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CustomerName</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.Address</td>
                        <td>@item.TotalAmount</td>
                        <td>
                            @Html.ActionLink("View", "viewBill", "EBILL", new { Id=item.Id}, new { @class = "btn btn-sm btn-light" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
